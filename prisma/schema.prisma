generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

model Company {
  id           String @id @default(uuid()) @db.VarChar(36)
  userId       String
  name         String
  profileImage String @db.Text
  cif          String
  phone        String
  country      String
  website      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts Contact[]
  events Event[]
}

model Contact {
  id    String @id @default(uuid()) @db.VarChar(36)
  name  String
  role  String
  email String
  phone String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String

  @@index([companyId])
}

model Event {
  id String @id @default(uuid())

  title String
  startDate DateTime
  allDay Boolean
  timeFormat String

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}
